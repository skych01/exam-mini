<!--index.wxml-->
<view class="page"> 
      <view class="page_hd">
        <view bindtap="bindViewTap" class="userinfo">
          <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        </view>
        <view class="page__bd_spacing">
          <view class="weui-flex" >
              <view class="weui-flex__item">
                <view class="placeholder"><text class="able">测试次数：</text><text class="points">{{restBillPoints}}</text></view>
              </view>
              <view class="weui-flex__item">
                <view class="placeholder"><text class="able">最高分数：</text><text class="points">{{restGivePoints}}</text></view>
              </view>
          </view>
        </view>
      </view>



  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
